<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:fontFamily">@font/googlesans</item>
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/primaryTextColor</item>
    </style>

    <style name="HomeCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">15dp</item>
        <item name="background">@color/primaryTextColor</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="ResultDisplayStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">2dp</item>
        <item name="android:drawableTint">@color/primaryTextColor</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
</resources>